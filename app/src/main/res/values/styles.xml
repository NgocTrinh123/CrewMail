<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- other attributes -->
        <item name="textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceLarge</item>
        <item name="android:textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceLarge
        </item>

        <item name="textAppearanceSmallPopupMenu">@style/myPopupMenuTextAppearanceSmall</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/myPopupMenuTextAppearanceSmall
        </item>

        <item name="popupMenuStyle">@style/myPopupMenuStyle</item>
        <item name="android:popupMenuStyle">@style/myPopupMenuStyle</item>
    </style>

    <style name="myPopupMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu">

    </style>

    <style name="myPopupMenuTextAppearanceSmall" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="myPopupMenuTextAppearanceLarge" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/btn_press_state</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_16_32</item>
    </style>

    <style name="default_avatar_45dp">
        <item name="android:layout_width">@dimen/dimen_45_90</item>
        <item name="android:layout_height">@dimen/dimen_45_90</item>
        <item name="android:src">@drawable/avatar_l</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="default_avatar_80dp">
        <item name="android:layout_width">@dimen/dimen_80_160</item>
        <item name="android:layout_height">@dimen/dimen_80_160</item>
        <item name="android:src">@drawable/avatar_l</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="text_16sp_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_16_32</item>
    </style>

    <style name="text_16sp_white" parent="@style/text_16sp_black">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="text_16sp_gray" parent="@style/text_16sp_black">
        <item name="android:textColor">@color/gray_compose_mail</item>
    </style>

    <style name="text_14sp_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_14_28</item>
    </style>

    <style name="text_13sp_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_13_25</item>
    </style>

    <style name="text_13sp_gray" parent="@style/text_13sp_white">
        <item name="android:textColor">@color/gray_compose_mail</item>
    </style>

    <style name="text_13sp_black" parent="@style/text_13sp_white">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="text_12sp_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_12_24</item>
    </style>

    <style name="text_12sp_gray" parent="@style/text_12sp_black">
        <item name="android:textColor">@color/gray_compose_mail</item>
    </style>

    <style name="border">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_1_2</item>
        <item name="android:background">@color/gray_light</item>
    </style>

    <style name="share_tab_btn_style">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_share_tab</item>
        <item name="android:textColor">@drawable/btn_share_tab_text</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- You can also inherit from NNF_BaseTheme.Light -->
    <style name="FilePickerTheme" parent="NNF_BaseTheme">
        <!-- Set these to match your theme -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Need to set this also to style create folder dialog -->
        <item name="alertDialogTheme">@style/FilePickerAlertDialogTheme</item>

        <!-- If you want to set a specific toolbar theme, do it here -->
        <!-- <item name="nnf_toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item> -->
    </style>

    <style name="FilePickerAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- SETTING -->
    <style name="SettingRow">
        <item name="android:textStyle">normal</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/setting_row_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/setting_row_padding_left</item>
    </style>

    <!-- NOTIFICATION SETTING -->
    <style name="LabelRow">
        <item name="android:background">@color/gray_light</item>
        <item name="android:textSize">@dimen/notification_label_text_size</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/notification_label_row</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/padding_block</item>
    </style>

    <!-- PIN -->
    <style name="PinRadio">
        <item name="android:enabled">false</item>
        <item name="android:checkable">false</item>
        <item name="android:button">@null</item>
        <item name="android:layout_margin">@dimen/margin_block</item>
        <item name="android:background">@drawable/bg_pin</item>
        <item name="android:layout_width">@dimen/pin_size</item>
        <item name="android:layout_height">@dimen/pin_size</item>
    </style>

    <style name="PinNumber">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/pin_number_text_size</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- COMMON -->
    <style name="Divider">
        <item name="android:background">@color/gray_light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
    </style>

    <style name="Button">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

</resources>
